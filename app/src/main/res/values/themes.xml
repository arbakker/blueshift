<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BlueshiftWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color - using blue from gradient -->
    <item name="colorPrimary">#4545ff</item>
    <item name="colorPrimaryVariant">#2c2cff</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color - using blue tones -->
    <item name="colorSecondary">#4545ff</item>
    <item name="colorSecondaryVariant">#2c2cff</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar matches app background -->
    <item name="android:statusBarColor">#4444FF</item>
        <!-- CustomLize your theme here. -->
    </style>

    <style name="Theme.BlueshiftWidget.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Widget radius attributes removed - they require API 31+ -->
    </style>

    <style name="Theme.BlueshiftWidget.AppWidgetContainer" parent="Theme.BlueshiftWidget.AppWidgetContainerParent" />

    <style name="Widget.BlueshiftWidget.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.BlueshiftWidget.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
</resources>