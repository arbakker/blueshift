<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Blueshift Gradient Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/blueshift_gradient"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="24dp"
        android:paddingTop="56dp"
        android:gravity="start">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blueshift Settings"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Players Section Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="8dp" />

    <!-- Network Selector and Sync Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <!-- Network Selector (shown when multiple networks exist) -->
        <LinearLayout
            android:id="@+id/network_selector_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Network:"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary" />

            <Spinner
                android:id="@+id/network_selector_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1" />
        </LinearLayout>

        <!-- Sync Presets Button -->
        <Button
            android:id="@+id/manual_sync_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Sync Presets"
            android:textSize="11sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            style="?attr/materialButtonOutlinedStyle" />
    </LinearLayout>

    <ListView
        android:id="@+id/players_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" />

    <!-- Add Player Button with + icon -->
    <Button
        android:id="@+id/add_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+ Add Player"
        style="?attr/borderlessButtonStyle"
        android:textColor="?attr/colorPrimary" />

    <Button
        android:id="@+id/discover_players_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Discover Players" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />

    <!-- Settings Section Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="12dp" />

    <!-- Preset Order Setting -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/preset_order_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preset_order_label"
            android:textSize="16sp"
            android:textColor="?android:attr/textColorPrimary" />

        <Spinner
            android:id="@+id/preset_order_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Note: Alphabetical ordering groups presets into inputs and non-inputs"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="?android:attr/textColorSecondary" />

    <Button
        android:id="@+id/export_presets_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Export Presets to M3U" />

    </LinearLayout>
    <!-- End Content Container -->

</LinearLayout>

</ScrollView>
